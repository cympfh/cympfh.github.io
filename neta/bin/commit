#!/bin/bash

usage() {
    cat <<EOM

SYNOPSIS
    commit -m "{short description for image}" "{image URL}"

    commit "{image URL}"
        Edit description with your $EDITOR

    commit --auto "{image URL}"
        Description are generated with "ocr"
EOM
}

IM=
MSG=
AUTO=
OCRFILE=

do_ocr() {
    OCRFILE=/tmp/$$.ocr
    withcache ocr $1 | grep ocr_text >$OCRFILE
    jq -r '"\(.ocr_text)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
    jq -r '"\(.description_minor)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
    jq -r '"\(.description_major)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
    rm $OCRFILE
}

use_ocr() {
    jq -r '"\(.ocr_text)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
    jq -r '"\(.description_minor)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
    jq -r '"\(.description_major)"' $OCRFILE | tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
}

while [ $# -gt 0 ]; do
    case "$1" in
        -m )
            MSG=$2
            shift 2
            ;;
        --auto | -A )
            AUTO=1
            shift
            ;;
        --ocr-file )
            OCRFILE=$2
            shift 2;
            ;;
        -h | --help )
            usage
            exit
            ;;
        * )
            IM=$1
            shift
            ;;
    esac
done

F=/tmp/$$
if [ -z "$IM" ]; then
    echo "Error: No image passed" >&2
    exit 1
fi
if [ -z "$MSG" ]; then
    echo "# $IM" >$F
    if [ ! -z "$OCRFILE" ]; then
        use_ocr "$OCRFILE" >>$F
    elif [ "$AUTO" -eq 1 ]; then
        do_ocr "$IM" >>$F
    fi
    $EDITOR $F
    MSG=$(cat $F | awk '/./ && (NR>1 || !/^#/)')  # Delete empty lines and the first comment line
    rm $F
fi

jq -n -c --arg IM "$IM" --arg MSG "$MSG" '{"url":$IM, "description": $MSG}' >> db.jsonl

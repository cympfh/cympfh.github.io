#!/bin/bash

usage() {
    cat <<EOM
Usage: $0 <src>

Specify *.jpg, *.gif,
Then *.thumb.jpg, *.thumb.gif are generated

EOM
    exit 0
}

if [ $# -eq 0 -o "$1" == "--help" -o "$1" == "help" ]; then
    usage
fi

EXT=${1##*.}
F=${1%.*}
TO="$F.thumb.$EXT"
convert -quality 75 -geometry 1028x1028 "$1" "$TO"

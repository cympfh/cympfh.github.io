digraph finite_automaton {
  graph[fontsize=8]
    rankdir=LR;
  size=8;

  node [shape=doublecircle, style="", color=black]; q0;
  node [shape=circle, style="", color=black]; q1 q2;
  node [shape=plaintext, label="", style=""]; iq0;
  iq0 -> q0 [color=blue];
  q0 -> q1 [label="0"];
  q1 -> q2 [label="0"];
  q2 -> q0 [label="0"];
}

#!/bin/bash

usage() {
    cat <<EOM

SYNOPSIS
    commit -m "{short description for image}" "{image URL}"

    commit "{image URL}"
        Edit description with your $EDITOR

    commit --auto "{image URL}"
        Description are generated with "ocr"
EOM
}

IM=
MSG=
AUTO=
OCRFILE=

trim() {
    tr '\n' ' ' | sed 's/  */ /g; s/ *$//g'; echo
}

do_ocr() {
    OCRFILE=/tmp/$$.ocr
    withcache ocr $1 >$OCRFILE
    if [ $? -ne 0 ]; then
        echo "OCR failed" >&2
        rm $OCRFILE
        return 1
    fi
    jq -c . $OCRFILE | sed 's/^/# /'
    jq -r .ocr.text $OCRFILE | trim
    jq -r .description.major $OCRFILE | trim
    jq -r .description.short $OCRFILE | trim
    jq -r '.tags | join(" ")' $OCRFILE | trim
    rm $OCRFILE
}

while [ $# -gt 0 ]; do
    case "$1" in
        -m )
            MSG=$2
            shift 2
            ;;
        --auto | -A )
            AUTO=1
            shift
            ;;
        -h | --help )
            usage
            exit
            ;;
        * )
            IM=$1
            shift
            ;;
    esac
done

F=/tmp/$$
if [ -z "$IM" ]; then
    echo "Error: No image passed" >&2
    exit 1
fi

if ( grep "$IM" ./db.jsonl >/dev/null ); then
    echo "Already exists"
    exit 1
fi

if [ -z "$MSG" ]; then
    echo "# $IM" >$F
    if [ "$AUTO" -eq 1 ]; then
        do_ocr "$IM" >>$F
    fi
    $EDITOR $F
    MSG=$(cat $F | awk '/./ && !/^#/')  # Delete empty lines and the first comment line
    rm $F
fi

jq -n -c --arg IM "$IM" --arg MSG "$MSG" '{"url":$IM, "description": $MSG}' >> db.jsonl
